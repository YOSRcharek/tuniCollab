
    <style>
        #teamFullName h5 {
            display: inline;
            margin-right: 7px; 
        }
        
      .openBtn {
        display: flex;
        justify-content: left;
      }
      .openButton {
        border: none;
        border-radius: 5px;
        background-color: #1c87c9;
        color: white;
        padding: 14px 20px;
        cursor: pointer;
        position: fixed;
      }
      .addMembrePopUP {
        position: relative;
        text-align: center;
        width: 100%;
      }

        .formPopup {
            display: none;
            position: fixed;
            left: 50%; /* Position horizontale au centre */
            top: 50%; /* Position verticale au centre */
             z-index: 9;
             transform: translate(-30%, -40%); 


          }
          .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* Gris semi-transparent */
            z-index: 8; /* Doit être inférieur au z-index du popup */
          }
          
    
      .formContainer {
        max-width: 300px;
        padding: 20px;
        background-color: #fff;
      }
      .formContainer input[type=text],
      .formContainer input[type=password] {
        width: 100%;
        padding: 15px;
        margin: 5px 0 20px 0;
        border: none;
        background: #eee;
      }
      .formContainer input[type=text]:focus,
      .formContainer input[type=password]:focus {
        background-color: #ddd;
        outline: none;
      }
      .formContainer .btn {
        padding: 12px 20px;
        border: none;
        background-color: #8ebf42;
        color: #fff;
        cursor: pointer;
        width: 100%;
        margin-bottom: 15px;
        opacity: 0.8;
      }
      .formContainer .cancel {
        background-color: #cc0000;
      }
      .DetailPopupMembre {
        display: none;
        position: fixed;
        left: 50%; /* Position horizontale au centre */
        top: 50%; /* Position verticale au centre */
         z-index: 9;
         transform: translate(-40%, -30%); 
      }
    </style>
  <body>
    <div class="overlay" id="overlay"></div>
  
  
    <script>
        function openForm() {
            document.getElementById("popupForm").style.display = "block";
            document.getElementById("overlay").style.display = "block"; // Afficher l'overlay
          }
          function closeForm() {
            document.getElementById("popupForm").style.display = "none";
            document.getElementById("overlay").style.display = "none"; // Masquer l'overlay
          }
          function openDetailMembre(nomMember, prenomMember,fonction) {
            // Mettre à jour le contenu de la popup avec les détails du projet
            document.getElementById("teamFirstName").innerText = nomMember;
            document.getElementById("teamLastName").innerText = prenomMember;
            document.getElementById("function").innerText = fonction;
            // Afficher la popup
            document.getElementById("popupDetailMembre").style.display = "block";
            document.getElementById("overlay").style.display = "block"; // Afficher l'overlayMember
        
        }
        
        function closeDetailMembre() {
            // Cacher la popup
            document.getElementById("popupDetailMembre").style.display = "none";
            document.getElementById("overlay").style.display = "none"; // Masquer l'overlayMember   
        }
    </script>
  
    <div class="tab-pane active show" id="tasks-tab" role="tabpanel">
        <div class="row mb-3">
            <div class="col">
                <h5 class="mb-0">Team</h5>
            </div>
            <div class="col text-end">
                <button class="custom-btn"  onclick="window.location='{{ path('app_create_membreFront')}}'">+ New member</button>
              
               
                <div class="addMembrePopUP">
                    <div class="formPopup" id="popupForm">
                        <div class="col-lg-6 col-12">
                            <form class="custom-form volunteer-form mb-5 mb-lg-0" action="{{ path('app_profil', {'id': association.id}) }}
                            " method="post" role="form">
                            <button type="button" class="btn-close" onclick="closeForm()"></button>

                                <h2 class="mb-4">New member</h2>
                                <div class="row">
                                  {# Afficher les erreurs globales du formulaire #}
                                {{ form_errors(form) }}

                    <div class="row">
                    {{ form_start(form, {'attr': {'class': 'custom-form volunteer-form mb-5 mb-lg-0', 'novalidate': 'novalidate'}}) }}

                        <div class="col-lg-6 col-12">
                            {{ form_row(form.nomMembre, {'label': 'Nom:', 'attr': {'class': 'form-control', 'placeholder': 'Nom', 'required': 'required'}}) }}
                            {# Afficher les erreurs spécifiques au champ nomMembre #}
                            {{ form_errors(form.nomMembre) }}
                        </div>
                        
                        <div class="col-lg-6 col-12">
                            {{ form_row(form.prenomMembre, {'label': 'Prénom:', 'attr': {'class': 'form-control', 'placeholder': 'Prénom', 'required': 'required'}}) }}
                            {# Afficher les erreurs spécifiques au champ prenomMembre #}
                            {{ form_errors(form.prenomMembre) }}
                        </div>
                        
                        <div class="col-lg-6 col-12">
                            {{ form_row(form.telephone, {'label': 'Téléphone:', 'attr': {'class': 'form-control', 'placeholder': 'Téléphone', 'required': 'required'}}) }}
                            {# Afficher les erreurs spécifiques au champ telephone #}
                            {{ form_errors(form.telephone) }}
                        </div>
                        
                        <div class="col-lg-6 col-12">
                            {{ form_row(form.emailMembre, {'label': 'Email:', 'attr': {'class': 'form-control', 'placeholder': 'Email', 'required': 'required'}}) }}
                            {# Afficher les erreurs spécifiques au champ emailMembre #}
                            {{ form_errors(form.emailMembre) }}
                        </div>
                        
                        <div class="col-lg-6 col-12">
                            {{ form_row(form.fonction, {'label': 'Fonction:', 'attr': {'class': 'form-control', 'required': 'required'}}) }}
                            {# Afficher les erreurs spécifiques au champ fonction #}
                            {{ form_errors(form.fonction) }}
                        </div>
                        {{ form_widget(form.association, {'attr': {'style': 'display: none;'}}) }}
                        
                    </div>

                   <button type="submit" class="form-control">Add member</button>



                      </div>
                                        {{ form_end(form) }}

                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <form class="custom-form search-form" action="#" method="post" role="form">
                <input class="form-control" type="search" placeholder="Search" aria-label="Search">
        
                <button type="submit" class="form-control">
                    <i class="bi-search"></i>
                </button>
        </form>
        </div>
        <div class="row">
            <div class="col-xl-12">  
                {% for team in membres %}
                <div class="task-list-box" id="design-task">
                    <div id="task-item-2"> 
                        <div class="card task-box rounded-3">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-xl-6 col-sm-5">
                                        <div class="checklist form-check font-size-15">
                                            <label class="form-check-label ms-1 task-title" for="customCheck2">{{ team.nomMembre }} {{ team.prenomMembre }}</label>
                                        </div>
                                        
                                    </div><!-- end col -->
                                    <div class="col-xl-6 col-sm-6">
                                        <div class="row align-items-center">
                                            <div class="col-xl-5 col-md-6 col-sm-5">
                                                
                                                {{team.fonction}}
                                                    
                                            </div><!-- end col -->
                                            <div class="col-xl-7 col-md-6 col-sm-7">
                                                <div class="d-flex flex-wrap gap-3 mt-3 mt-xl-0 justify-content-md-end">
                                                    <div>
                                                        <a class="badge rounded-pill badge-soft-warning font-size-11 task-status"onclick="openDetailMembre('{{ team.nomMembre }}', '{{ team.prenomMembre }}', '{{ team.fonction }}')" type="button">Detail</a>
                                                    </div>
                                                    <div>
                                                        <a href="{{ path('app_edit_membre', {'id': team.id}) }}" class="badge rounded-pill badge-soft-warning font-size-11 task-status">Edit</a>                     
                                                    </div>
                                                    <div>
                                                        <a data-bs-toggle="modal" type='button' data-bs-target="#deleteMembreModel{{ team.id }}" aria-label="Delete" class="badge rounded-pill badge-soft-warning font-size-11 task-status">Delete</a>
                                                         
                                                    </div>
                                                    <div class="modal fade" id="deleteMembreModel{{ team.id }}" tabindex="-1" aria-labelledby="deleteMembreModelLabel" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title" id="deleteMembreModelLabel">Confirmation de suppression</h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                  Are you sure do you want to delete this member ?
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="custom-btn" data-bs-dismiss="modal">Annuler</button>
                                                                    <a href="{{ path('app_delete_membre', {'id': team.id}) }}" class="custom-btn">Supprimer</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                
                                            <div class="DetailMemberPopUP">
                                                <div class="DetailPopupMembre" id="popupDetailMembre">
                                                    <div>
                                                        <div class="custom-text-box">
                                                            <button type="button" class="btn-close" onclick="closeDetailMembre()"></button>
                                                            <h2 class="mb-2">Detail Member</h2>
                                                            <div class="mb-3" id="teamFullName">
                                                                <h5  id="teamFirstName"></h5>
                                                                 <h5 id="teamLastName"></h5>
                                                            </div>
                                                            
                                                            <p class="mb-0" id="function"></p>
                                                        </div>
                                                    </div>   
                                                </div>
                                            </div>
                                            </div>
                                            <!-- end col -->
                                        </div><!-- end row -->
                                    </div><!-- end col -->
                                </div><!-- end row -->
                            </div><!-- end cardbody -->
                        </div><!-- end card -->
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    
