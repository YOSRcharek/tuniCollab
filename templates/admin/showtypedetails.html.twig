{% extends 'baseAdmin.html.twig' %}

{% block title %}TypeEvent{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">TypeEvent</h1>
        </div>
        <div class="card-body">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ type_event.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ type_event.nom }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <a href="{{ path('app_type_event_indexadmin') }}" class="btn btn-primary">Retour à la liste</a>
            <a href="{{ path('app_show_eventsadmin') }}" class="btn btn-secondary">Retour à la liste de tous les événements</a>
            <a href="{{ path('app_type_event_editadmin', {'id': type_event.id}) }}" class="btn btn-warning">Modifier</a>
        </div>
    </div>

    {{ include('type_event/_delete_form.html.twig') }}
{% endblock %}
