{% extends 'baseAdmin.html.twig' %}

{% block body %}
<main class="h-full pb-16 overflow-y-auto">
    <div class="container grid px-6 mx-auto">
        <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
            Users
        </h2>
        <div class="w-full overflow-hidden rounded-lg shadow-xs">
            <div class="w-full overflow-x-auto">
                <table class="w-full whitespace-no-wrap">
                    <thead>
                        <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                            <th class="px-4 py-3">ID</th>
                            <th class="px-4 py-3">Password</th>
                            <th class="px-4 py-3">Email</th>
                            <th class="px-4 py-3">Is Verified</th>
                            <th class="px-4 py-3">Actions</th> <!-- Added Action column -->
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                        {% for user in users %}
                        <tr class="text-gray-700 dark:text-gray-400">
                            <td class="px-4 py-3 text-sm">{{ user.id }}</td>
                            <td class="px-4 py-3 text-sm">{{ user.password }}</td>
                            <td class="px-4 py-3 text-sm">{{ user.email }}</td>
                            <td class="px-4 py-3 text-sm">
                                {% if user.isVerified %}
                                    <span class="px-2 py-1 font-semibold leading-tight text-green-700 bg-green-100 rounded-full dark:bg-green-700 dark:text-green-100">
                                        Yes
                                    </span>
                                {% else %}
                                    <span class="px-2 py-1 font-semibold leading-tight text-red-700 bg-red-100 rounded-full dark:text-red-100 dark:bg-red-700">
                                        No
                                    </span>
                                {% endif %}
                            </td>
                            <td class="px-4 py-3"> <!-- Added Action column -->
                                <div class="flex items-center space-x-4 text-sm">
                                    <form action="{{ path('book_delete', {'id': user.id}) }}" method="post"> <!-- Form for Delete button -->
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="text-purple-600 hover:text-purple-900">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 009 2zM7 8a1 1 0 112 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                                            </svg>
                                        </button>
                                    </form>
                                    <a href="{{ path('user_edit', {'id': user.id}) }}" class="text-indigo-600 hover:text-indigo-900">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M14.293 3.293a1 1 0 00-1.414 0l-10 10a1 1 0 00-.21.324l-2 5a1 1 0 001.316 1.316l5-2a1 1 0 00.324-.211l10-10a1 1 0 000-1.414l-2-2zM4.727 17.273l-1.798.72.72-1.798 9.879-9.879 1.798 1.798-9.879 9.879z" clip-rule="evenodd" />
                                            <path fill-rule="evenodd" d="M13 6l1-1 1 1-1 1-1-1z" clip-rule="evenodd" />
                                        </svg>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td class="px-4 py-3 text-sm" colspan="5">No records found</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="grid px-4 py-3 text-xs font-semibold tracking-wide text-gray-500 uppercase border-t dark:border-gray-700 bg-gray-50 sm:grid-cols-9 dark:text-gray-400 dark:bg-gray-800">
                <span class="flex items-center col-span-3">
                    <!-- Pagination info -->
                </span>
                <span class="col-span-2"></span>
                <!-- Pagination -->
                <span class="flex col-span-4 mt-2 sm:mt-auto sm:justify-end">
                    <nav aria-label="Table navigation">
                        <!-- Pagination buttons -->
                    </nav>
                </span>
            </div>
        </div>
    </div>
</main>
{% endblock %}
