{% extends 'base.html.twig' %}

{% block body %}
    <section class="donate-section">
        <div class="section-overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-12 mx-auto">
                    {{ form_start(form, {'attr': {'class': 'custom-form donate-form', 'novalidate': 'novalidate'}}) }}
                    <h3 class="mb-4">Mise Ã  jour de votre don</h3>
                    
                    {% if form_errors(form) %}
                        <div class="alert alert-danger">
                            <ul>
                                {% for error in form_errors(form) %}
                                    <li>{{ error.message }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}
                    
                    <div class="row">
                        <div class="col-lg-12 col-12">
                            <h5 class="mt-2 mb-3">Montant</h5>
                        </div>
                        <div class="form-group row mb-4">
                            {{ form_errors(form.montant)}}
                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1">$</span>
                                    {{ form_widget(form.montant, {'attr': {'class': 'form-control', 'placeholder': 'Choisir un montant', 'aria-label': 'Username', 'aria-describedby': 'basic-addon1'}}) }}
                                </div>
                            </div>
                        </div>

                        
                       
                        <div class="col-lg-12 col-12">
                            <h5 class="mt-4 pt-1">Payment</h5>
                        </div>
                        <div class="col-lg-12 col-12 mt-2">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="DonationPayment" id="flexRadioDefault9">
                                <label class="form-check-label" for="flexRadioDefault9">
                                    <i class="bi-credit-card custom-icon ms-1"></i>
                                    Debit or Credit card
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="DonationPayment" id="flexRadioDefault10">
                                <label class="form-check-label" for="flexRadioDefault10">
                                    <i class="bi-paypal custom-icon ms-1"></i>
                                    Paypal
                                </label>
                            </div>
                        </div>
                        <div class="col-lg-12 col-12 mt-2">
                            <h5 class="mt-2 mb-3">Type</h5>
                        </div>
                        <div class="form-group row">
                             {{ form_errors(form.type)}}
                            <div class="col-lg-6 col-10 mt-2">
                                {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="col-lg-6 col-2 mt-2">
                                <button type="button" class="custom-btn btn mt-3" style="font-size: 1rem; padding: .375rem .75rem; " onclick="window.location.href='{{ path('type_dons_add') }}'">Ajouter un type</button>
                            </div>
                        </div>
                        <div class="col-lg-12 col-12 mt-2">
                            <h5 class="mt-2 mb-3">Association</h5>
                        </div>
                        <div class="form-group row">
                             {{ form_errors(form.association)}}
                            <div class="col-lg-6 col-12 mt-2">
                                {{ form_widget(form.association, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                    <button class="custom-btn btn mt-3" style="font-size: 1rem; padding: .375rem .75rem;" >Confirmer le don</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
