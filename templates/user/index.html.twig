{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <div class="container">
        <h1>Edit User</h1>
        {{ form_start(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.roles) }}
        {{ form_row(form.password) }}
        {{ form_row(form.isVerified) }}
        <button type="submit" class="btn btn-primary">Save Changes</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
