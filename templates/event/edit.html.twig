{% extends 'base.html.twig' %}

{% block title %}Edit Event{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Edit Event</h1>

        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        <div class="form-group">
            {{ form_row(form.nomEvent, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.dateFin, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.localisation, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.capaciteMax, {'attr': {'class': 'form-control'}}) }}
        </div> 

        {#<div class="form-group">
            {{ form_row(form.capaciteActuelle, {'attr': {'class': 'form-control'}}) }}
        </div>#}

        <div class="form-group">
            {{ form_row(form.type, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="{{ path('app_show_events', {'id': event.id}) }}" class="btn btn-secondary">Cancel</a>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
