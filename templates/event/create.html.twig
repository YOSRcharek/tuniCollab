{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel événement{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h1 class="mb-0">Créer un nouvel événement</h1>
            </div>
            <div class="card-body">
                <form method="post" action="{{ path('app_create_event') }}" class="needs-validation" novalidate>
                    {{ form_start(form, {'attr': {'class': 'form','enctype': 'multipart/form-data'}}) }}

                    <div class="mb-3">
                        {{ form_row(form.nomEvent, {'label': 'Nom de l\'événement', 'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.description, {'label': 'Description', 'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.dateDebut, {'label': 'Date de début', 'attr': {'class': 'form-control datepicker'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.dateFin, {'label': 'Date de fin', 'attr': {'class': 'form-control datepicker'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.localisation, {'label': 'Localisation', 'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                 {{ form_row(form.latitude, {'label': 'Latitude', 'attr': {'class': 'form-control'}}) }}
                    </div>

                <div class="mb-3">
                   {{ form_row(form.longitude, {'label': 'Longitude', 'attr': {'class': 'form-control'}}) }}
                </div>

                    <div class="mb-3">
                        {{ form_row(form.capaciteMax, {'label': 'Capacité maximale', 'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="row mb-3">
                  <label for="inputText" class="col-sm-7 col-form-label">image </label>
                  <div class="col-sm-10">
              {{ form_widget(form.image ,{'attr': {'class':'form-control'}}) }}
          
              
                  </div>
                    

                 {#}   <div class="mb-3">
                        {{ form_row(form.capaciteActuelle, {'label': 'Capacité Actuelle', 'attr': {'class': 'form-control'}}) }}
                    </div>#}

                    
           <div class="mb-3 d-flex align-items-center">
    {{ form_row(form.type, {'label': 'Type d\'événement', 'attr': {'class': 'form-control'}}) }}
    <a href="{{ path('app_type_event_new') }}" class="btn btn-secondary ms-2">+</a>
</div>

                    <button type="submit" class="btn btn-primary">Créer l'événement</button>
                    {{ form_end(form) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
